<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.98.0">
    <title>Book Room</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <header>
        <div class="navbar navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a href="#" class="navbar-brand d-flex align-items-center">
                    <strong>Welcome Tathagata!</strong>
                </a>
            </div>
        </div>
    </header>

    <main>
        <section class="py-5 container">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h2>Enter the details:</h2><br>

                    <form action="" method="post">
                        <div class="mb-4">
                            <label for="adultCount">Persons including children (min 2, max 4): </label>
                            <input type="number" id="quantity" name="quantity" min="1" max="4"> <br>
                        </div>

                        <div class="mb-4">
                            <label for="">Check In:</label>
                            <input type="date" name="checkInDate" id="checkInDate"> <br>
                        </div>

                        <div class="mb-4">
                            <label for="">Check Out:</label>
                            <input type="date" name="checkOutDate" id="checkOutDate"><br>
                        </div>


                        <button type="submit" class="w-30 btn btn-primary">Search</button>
                    </form>


                </div>
            </div>
        </section>

        <div class="album py-5 bg-light">
            <div class="container"> <h3>Browse All the Rooms:</h3>


                <div class="row">
                    <% for(var i=0; i<roomDetails.length; i++) { %>
                    <div class="col-4">
                        <% if (roomDetails[i].available===true) { %>
                        <div class="card shadow-sm" style="border: 2px solid green;">
                            <% } else { %>
                            <div class="card shadow-sm" style="border: 2px solid red;">
                                <% } %>
                                <svg class="bd-placeholder-img card-img-top" width="100%" height="225"
                                    xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail"
                                    preserveAspectRatio="xMidYMid slice" focusable="false">
                                    <title>Placeholder</title>
                                    <rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%"
                                        fill="#eceeef" dy=".3em">Room <%= roomDetails[i].roomNo %></text>
                                </svg>

                                <div class="card-body">
                                    <p class="card-text">Capacity: <%= roomDetails[i].capacity %></p>
                                    <p class="card-text">Type: <%= roomDetails[i].type %></p>
                                    <p class="card-text">Price: <%= roomDetails[i].price %>/-</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">

                                            <% if (roomDetails[i].available===true) { %>
                                            <button type="button" class="btn btn-success">Book Now</button>
                                            <% } else { %>
                                            <button type="button" class="btn btn-danger">Book Now</button>

                                            <% } %>
                                        </div>
                                        <small class="text-muted"><%= roomDetails[i].rating %> stars</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <footer class="text-muted py-5">
        <div class="container">
            <p class="float-end mb-1">
                <a href="#">Back to top</a>
            </p>
            <p class="mb-1">Check the sorce code at <a href="">GitHub</a> &copy;Tathagata Kar</p>
        </div>
    </footer>


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
    </script>
</body>
</html>