    <h1>Sign Up</h1>

    <main class="container">

      <form action="/signup" method="post">
        <br>
        <div class="mb-4">
          <label for="name" class="form-label">Name</label>
          <input type="text" id="name" name="name" class="form-control">
        </div>

        <div class="mb-4">
          <label for="email" class="form-label">Email</label>
          <input type="email" id="email" name="email" class="form-control">
        </div>

        <div class="mb-4">
          <label for="password" class="form-label">Password</label>
          <input type="password" id="password" name="password" class="form-control">
        </div>

        <div class="mb-4">
          <label for="password" class="form-label">Confirm yourPassword</label>
          <input type="password" id="password" name="confirm" class="form-control">
        </div>

        <button type="submit" class="w-30 btn btn-lg btn-primary">sign up</button>
      </form>

      <br>

      <% if (message) {%>
        <div style="text-align: center" class="alert alert-<%= message.type%>" >
          <!-- <button type="button" class="close" data-dismiss="alert">&times;</button> -->
          <strong><%=message.intro%></strong> <%=message.message%>
        </div>
      <% } %>


    </main>
    
